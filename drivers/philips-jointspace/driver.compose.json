  "energy": {},
  "images": {
    "large": "/drivers/philips-jointspace/assets/images/large.png",
    "small": "/drivers/philips-jointspace/assets/images/small.png"
  },
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "select_pairing_mode"
      },
      "options": {
        "singular": true,
        "title": {
          "en": "Select the device you want to add",
          "nl": "Selecteer het apparaat die je wil toevoegen"
        }
      }
    },
    {
      "id": "select_pairing_mode"
    },
    {
      "id": "loading",
      "template": "loading"
    },
    {
      "id": "search_device"
    },
    {
      "id": "loading",
      "template": "loading"
    },
    {
      "id": "validate",
      "template": "loading"
    },
    {
      "id": "authenticate",
      "template": "pincode",
      "options": {
        "title": {
          "en": "Enter the code displayed on the TV",
          "nl": "Vul de code in die op de TV wordt weergegeven"
        }
      }
    },
    {
      "id": "verify"
    },
    {
      "id": "done"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "General settings",
        "nl": "Algemene instellingen"
      },
      "children": [
        {
          "id": "ipAddress",
          "type": "text",
          "label": {
            "en": "IP address",
            "nl": "IP adres"
          },
          "value": "0.0.0.0"
        },
        {
          "id": "apiVersion",
          "type": "text",
          "label": {
            "en": "API version",
            "nl": "API versie"
          },
          "value": "6"
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Device settings"
      },
      "children": [
        {
          "id": "volumeMax",
          "type": "number",
          "label": {
            "en": "Volume Max"
          },
          "value": 60
        },
        {
          "id": "volumeMin",
          "type": "number",
          "label": {
            "en": "Volume Min"
          },
          "value": 0
        }
      ]
    }
  ]
}